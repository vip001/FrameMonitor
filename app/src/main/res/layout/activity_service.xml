<?xml version="1.0" encoding="utf-8"?>
<com.vip001.framemonitor.ImmersiveLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#171220"
        android:gravity="center"
        android:text="Service卡顿"
        android:textColor="#fff"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_startservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动服务"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"></Button>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="开启掉帧" />

    <Button
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="停止检测" />

</com.vip001.framemonitor.ImmersiveLinearLayout>